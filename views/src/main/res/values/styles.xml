<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="primaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorButtonPrimaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_primary_button</item>
    </style>
</resources>